<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="mainActivityView"
            type="com.example.there.findclips.activities.main.MainView" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.main.MainActivity">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_view_pager"
            onPageChangeListener="@{mainActivityView.onPageChangeListener}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{mainActivityView.pagerAdapter}"
            android:background="@drawable/main_background_gradient"
            app:layout_constraintBottom_toTopOf="@+id/main_bottom_navigation_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/main_bottom_navigation_view"
            onNavigationItemSelectedListener="@{mainActivityView.onNavigationItemSelectedListener}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:visibility="@{(safeUnbox(mainActivityView.state.videoIsOpen) &amp;&amp; safeUnbox(mainActivityView.state.isMaximized)) ? View.GONE : View.VISIBLE}"
            app:itemIconTint="@color/bottom_navigation_color"
            app:itemTextColor="@color/bottom_navigation_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_view_pager"
            app:menu="@menu/bottom_navigation" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/main_player_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="@{safeUnbox(mainActivityView.state.videoIsOpen) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/main_bottom_navigation_view"
            app:layout_constraintRight_toRightOf="parent">

            <fragment
                android:id="@+id/main_player_fragment"
                android:name="com.example.there.findclips.activities.player.SwipeableYTPlayerFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>

