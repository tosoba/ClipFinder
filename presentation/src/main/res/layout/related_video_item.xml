<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="video"
            type="com.example.there.findclips.model.entity.Video" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/related_video_thumbnail_image_view"
            imageUrl="@{video.thumbnailUrl}"
            android:layout_width="120dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/ShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@{video.duration}"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="@id/related_video_thumbnail_image_view"
            app:layout_constraintTop_toTopOf="@id/related_video_thumbnail_image_view" />

        <TextView
            android:id="@+id/related_video_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@{video.title}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toTopOf="@id/related_video_channel_thumbnail_image_view"
            app:layout_constraintLeft_toRightOf="@id/related_video_thumbnail_image_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/related_video_thumbnail_image_view" />

        <ImageView
            android:id="@+id/related_video_channel_thumbnail_image_view"
            imageUrl="@{video.channelThumbnailUrl}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/related_video_thumbnail_image_view"
            app:layout_constraintLeft_toRightOf="@id/related_video_thumbnail_image_view"
            app:layout_constraintRight_toLeftOf="@id/related_video_details_txt"
            app:layout_constraintTop_toBottomOf="@id/related_video_title_txt" />

        <TextView
            android:id="@+id/related_video_details_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{video.details}"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/related_video_channel_thumbnail_image_view"
            app:layout_constraintLeft_toRightOf="@id/related_video_channel_thumbnail_image_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/related_video_channel_thumbnail_image_view" />

    </android.support.constraint.ConstraintLayout>
</layout>
