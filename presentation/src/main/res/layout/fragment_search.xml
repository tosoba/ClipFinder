<layout>

    <data>

        <variable
            name="searchFragmentView"
            type="com.example.there.findclips.fragment.search.SearchView" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.there.findclips.search.SearchFragment">

        <com.example.there.findclips.view.viewpager.LockableViewPager
            android:id="@+id/search_fragment_view_pager"
            swipeLocked="@{true}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{searchFragmentView.pagerAdapter}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>


