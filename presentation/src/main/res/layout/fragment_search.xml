<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="videosViewState"
            type="com.example.there.findclips.search.videos.VideosSearchViewState" />

        <variable
            name="spotifyViewState"
            type="com.example.there.findclips.search.spotify.SpotifySearchViewState" />

        <variable
            name="searchViewState"
            type="com.example.there.findclips.search.SearchViewState" />

        <variable
            name="onQueryTextListener"
            type="android.widget.SearchView.OnQueryTextListener" />

        <variable
            name="onTabSelectedListener"
            type="android.support.design.widget.TabLayout.OnTabSelectedListener" />

        <variable
            name="pagerAdapter"
            type="android.support.v4.app.FragmentStatePagerAdapter" />

        <variable
            name="onPageChangeListener"
            type="android.support.v4.view.ViewPager.OnPageChangeListener" />

        <variable
            name="videosAdapter"
            type="com.example.there.findclips.lists.VideosList.Adapter" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.there.findclips.search.SearchFragment">

        <android.support.design.widget.TabLayout
            android:id="@+id/spotify_tab_layout"
            onTabSelectedListener="@{onTabSelectedListener}"
            tabs="@{searchViewState.spotifyFragmentTabs}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="@{searchViewState.spinnerSelection == 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabGravity="fill" />

        <SearchView
            android:id="@+id/search_view"
            onQueryTextListener="@{onQueryTextListener}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:queryHint="@{searchViewState.queryHint}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spotify_tab_layout" />

        <android.support.v4.view.ViewPager
            android:id="@+id/spotify_tab_view_pager"
            onPageChangeListener="@{onPageChangeListener}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{pagerAdapter}"
            android:visibility="@{searchViewState.spinnerSelection == 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_view" />

        <android.support.v7.widget.RecyclerView
            videosAdapter="@{videosAdapter}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{searchViewState.spinnerSelection == 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_view" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{(videosViewState.videosLoadingInProgress &amp;&amp; searchViewState.spinnerSelection == 1) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_view" />

    </android.support.constraint.ConstraintLayout>
</layout>