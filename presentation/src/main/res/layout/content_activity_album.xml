<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="view"
            type="com.example.there.findclips.activities.album.AlbumView" />
    </data>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background_gradient"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.there.findclips.activities.album.AlbumActivity"
        tools:showIn="@layout/activity_album">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/album_artists_label"
                style="@style/LargeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/artists"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/album_artists_recycler_view"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/album_artists_recycler_view"
                android:layout_width="0dp"
                android:layout_height="126dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:adapter="@{view.artistsAdapter}"
                app:layout_constraintBottom_toTopOf="@id/album_tracks_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_artists_label" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{view.state.artistsLoadingInProgress ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/album_artists_recycler_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/album_artists_recycler_view" />

            <TextView
                android:id="@+id/album_tracks_label"
                style="@style/LargeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tracks"
                app:layout_constraintBottom_toTopOf="@id/album_tracks_fragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_artists_recycler_view" />

            <fragment
                android:id="@+id/album_tracks_fragment"
                android:name="com.example.there.findclips.fragments.lists.SpotifyTracksFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_tracks_label"
                tools:context=".activities.album.AlbumActivity"
                tools:layout="@layout/fragment_spotify_tracks" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{view.state.tracksLoadingInProgress ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/album_tracks_fragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/album_tracks_fragment" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>


