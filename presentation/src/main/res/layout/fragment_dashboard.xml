<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewState"
            type="com.example.there.findclips.dashboard.DashboardViewState" />
    </data>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.there.findclips.dashboard.DashboardFragment">

            <TextView
                android:id="@+id/genres_label_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/genres"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/genres_recycler_view"
                categories="@{viewState.categories}"
                android:layout_width="0dp"
                android:layout_height="252dp"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarThumbHorizontal="@drawable/scrollbar_thumb"
                android:scrollbars="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genres_label_txt" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="@{viewState.categoriesLoadingInProgress ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/genres_recycler_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/genres_recycler_view" />

            <TextView
                android:id="@+id/featured_playlists_label_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/featured_playlists"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genres_recycler_view" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/featured_playlists_recyclerview"
                featuredPlaylists="@{viewState.featuredPlaylists}"
                android:layout_width="0dp"
                android:layout_height="252dp"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarThumbHorizontal="@drawable/scrollbar_thumb"
                android:scrollbars="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/featured_playlists_label_txt" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="@{viewState.featuredPlaylistsLoadingInProgress ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/featured_playlists_recyclerview"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/featured_playlists_recyclerview" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>
