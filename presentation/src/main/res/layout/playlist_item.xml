<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="playlist"
            type="com.example.there.findclips.model.entity.spotify.Playlist" />
    </data>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        imageSrc="@{playlist.imageViewSrc}"
